<h1>Inicio</h1>

<table>
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Nombre</th>
      <th>Tel√©fono</th>
      <th>Zona</th>
      <th>Horario</th>
      <th>Disponible</th>
      <th>Comentarios</th>
    </tr>
  </thead>
  <tbody>
    <% cerrajeros.forEach(cerrajero=> { %>
      <tr>
        <td><%=cerrajero.empresa.nombre%></td>
        <td><%=cerrajero.nombre%></td>
        <td><%=cerrajero.telefono%></td>
        <td><%=cerrajero.zona%></td>
        <td><%=cerrajero.horario%></td>
        <td><%=cerrajero.disponible? "Si" : "No"%></td>
        <td>
          <ul>
            <% cerrajero.comentarios.forEach(comentario=> {%>
              <li><%=comentario.contenido%></li>
            <% }) %>
          </ul>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
